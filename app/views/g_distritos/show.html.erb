<!-- Page Header -->
<div class="sigel-page-header mb-4">
  <div class="sigel-page-title">
    <iconify-icon icon="solar:layers-bold-duotone" style="font-size: 2.2rem;"></iconify-icon>
    <h1>
      Detalhes de
      <%= t("activerecord.models.g_distrito.one", default: "G distrito") %>
    </h1>
  </div>
</div>
<div class="sigel-card">
  <div class="sigel-card-header">
    <h5>
      <iconify-icon icon="solar:clipboard-text-bold-duotone" class="me-2"></iconify-icon>
      Informações do Registro
    </h5>
  </div>
  <div class="sigel-card-body">
    <div class="row g-4">
      <div class="col-md-4">
        <div class="sigel-detail-item">
          <span class="sigel-detail-label">Descricao</span>
          <div class="sigel-detail-value">
            <%= @g_distrito.descricao.to_s.presence || "-" %>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="sigel-detail-item">
          <span class="sigel-detail-label">Codigo ibge</span>
          <div class="sigel-detail-value">
            <%= @g_distrito.codigo_ibge.to_s.presence || "-" %>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="sigel-detail-item">
          <span class="sigel-detail-label">Município</span>
          <div class="sigel-detail-value">
            <%= @g_distrito.g_municipio&.descricao.to_s.presence || "-" %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="sigel-card-footer d-flex justify-content-between">
    <div>
      <%= link_to g_distritos_path, class: "btn btn-sigel-outline" do %>
        Voltar para lista
      <% end %>
    </div>
    <div class="d-flex gap-2">
      <%= link_to edit_g_distrito_path(@g_distrito), class: "btn btn-sigel-primary" do %>
        Editar
      <% end %>
      <button type="button" class="btn btn-danger js-open-delete-modal" data-delete-url="<%= g_distrito_path(@g_distrito) %>">
        Excluir
      </button>
    </div>
  </div>
</div>
