<div class="container">
  <%= render "shared/notice" %>
  <div class="card border-0 shadow shadow-sm">
    <div class="card-header border-0 d-flex justify-content-between">
      <span class="fs-4">Visualizar G Municipio</span>
    </div>
    <div class="card-body">
      <div id="<%= dom_id @g_municipio %>">
          <p>
            <strong>Descricao:</strong>
            <%= @g_municipio.descricao %>
          </p>
          <p>
            <strong>Codigo Ibge:</strong>
            <%= @g_municipio.codigo_ibge %>
          </p>
          <p>
            <strong>G Estado:</strong>
            <%= @g_municipio.g_estado %>
          </p>
      </div>
    </div>
    <div class="card-footer border-0 d-flex justify-content-between">
      <div>
        <%= link_to edit_g_municipio_path(@g_municipio), class: "btn btn-primary" do %>
        <i class="bi bi-pencil-square"></i> Editar
        <% end %>
        <%= link_to "Voltar", g_municipios_path, class: "btn btn-secondary" %>
      </div>
      <%= button_to "Deletar", @g_municipio, method: :delete, class: "btn btn-outline-danger border-0" %>
    </div>
  </div>
</div>
