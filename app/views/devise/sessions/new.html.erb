<div class="row justify-content-center">
  <div class="col-md-6 col-lg-4">
    <div class="card mt-5">
      <div class="card-header text-center">
        <h3><i class="bi bi-box-arrow-in-right"></i> Entrar</h3>
      </div>
      <div class="card-body">
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="mb-3">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        label: "E-mail",
                        placeholder: "seu@email.com",
                        input_html: { autocomplete: "email", class: "form-control" } %>
          </div>
          <div class="mb-3">
            <%= f.input :password,
                        required: false,
                        label: "Senha",
                        placeholder: "Sua senha",
                        input_html: { autocomplete: "current-password", class: "form-control" } %>
          </div>
          <% if devise_mapping.rememberable? %>
            <div class="mb-3">
              <%= f.input :remember_me,
                          as: :boolean,
                          label: "Lembrar-me",
                          wrapper_html: { class: "form-check" },
                          input_html: { class: "form-check-input" },
                          label_html: { class: "form-check-label" } %>
            </div>
          <% end %>

          <div class="d-grid">
            <%= f.button :submit, "Entrar", class: "btn btn-primary btn-lg" %>
          </div>
        <% end %>
      </div>
      <div class="card-footer text-center">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
