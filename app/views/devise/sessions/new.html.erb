<div class="sigel-auth-container">
  <div class="sigel-auth-card">
    <div class="sigel-auth-header">
      <img src="/layout/assets/img/Sigel_Banner3.png" class="sigel-auth-logo" alt="SIGEL">
      <p class="sigel-auth-subtitle">Sistema Integrado de Gestão de Leilões</p>
    </div>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "sigel-auth-form" }) do |f| %>
      <div class="sigel-form-group">
        <%= f.input :email, label: "E-mail", placeholder: "seu@email.com", required: false, input_html: { class: "sigel-input", autocomplete: "email" } %>
      </div>
      <div class="sigel-form-group">
        <%= f.input :password, label: "Senha", placeholder: "Sua senha", required: false, input_html: { class: "sigel-input", autocomplete: "current-password" } %>
      </div>
      <div class="sigel-auth-row">
        <% if devise_mapping.rememberable? %>
          <div class="sigel-checkbox">
            <%= f.check_box :remember_me, class: "sigel-checkbox-input" %>
            <%= f.label :remember_me, "Lembrar-me", class: "sigel-checkbox-label" %>
          </div>
        <% end %>
      </div>
      <%= f.button :submit, "Entrar", class: "sigel-btn-primary" %>
      <div class="sigel-auth-footer">
        <span>Ainda não tem conta?</span>
        <%= link_to "Criar conta", new_registration_path(resource_name), class: "sigel-link strong" %>
      </div>
    <% end %>
  </div>
</div>
