<div class="card mb-0">
  <div class="card-body">
    <a href="/" class="text-nowrap logo-img text-center d-block py-3 w-100">
      <img src="/images/logos/logo-light.svg" width="180" alt="SIGEL">
    </a>
    <p class="text-center">Crie sua conta no SIGEL</p>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification message: "Não foi possível salvar. Verifique os erros abaixo:" %>

      <div class="mb-3">
        <%= f.input :nome,
                    required: true,
                    autofocus: true,
                    label: "Nome Completo",
                    placeholder: "Seu nome completo",
                    input_html: { class: "form-control" } %>
      </div>

      <div class="mb-3">
        <%= f.input :cpf,
                    required: true,
                    label: "CPF",
                    placeholder: "Apenas números (11 dígitos)",
                    hint: "Apenas números, sem pontos ou traços",
                    input_html: { class: "form-control", maxlength: 11 } %>
      </div>

      <div class="mb-3">
        <%= f.input :email,
                    required: true,
                    label: "E-mail",
                    placeholder: "seu@email.com",
                    input_html: { autocomplete: "email", class: "form-control" } %>
      </div>

      <div class="mb-3">
        <%= f.input :password,
                    required: true,
                    label: "Senha",
                    placeholder: "Mínimo 6 caracteres",
                    hint: ("Mínimo #{@minimum_password_length} caracteres" if @minimum_password_length),
                    input_html: { autocomplete: "new-password", class: "form-control" } %>
      </div>

      <div class="mb-4">
        <%= f.input :password_confirmation,
                    required: true,
                    label: "Confirmar Senha",
                    placeholder: "Repita a senha",
                    input_html: { autocomplete: "new-password", class: "form-control" } %>
      </div>

      <%= f.button :submit, "Criar Conta", class: "btn btn-primary w-100 py-8 fs-4 mb-4 rounded-2" %>

      <div class="d-flex align-items-center justify-content-center">
        <p class="fs-4 mb-0 fw-bold">Já tem uma conta?</p>
        <%= link_to "Entrar", new_session_path(resource_name), class: "text-primary fw-bold ms-2" %>
      </div>
    <% end %>
  </div>
</div>
