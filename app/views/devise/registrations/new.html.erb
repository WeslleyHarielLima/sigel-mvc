<div class="row justify-content-center">
  <div class="col-md-6 col-lg-5">
    <div class="card mt-5">
      <div class="card-header text-center">
        <h3><i class="bi bi-person-plus"></i> Criar Conta</h3>
      </div>
      <div class="card-body">
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification message: "Não foi possível salvar. Verifique os erros abaixo:" %>

          <div class="mb-3">
            <%= f.input :nome,
                        required: true,
                        autofocus: true,
                        label: "Nome Completo",
                        placeholder: "Seu nome completo",
                        input_html: { class: "form-control" } %>
          </div>

          <div class="mb-3">
            <%= f.input :cpf,
                        required: true,
                        label: "CPF",
                        placeholder: "Apenas números (11 dígitos)",
                        hint: "Apenas números, sem pontos ou traços",
                        input_html: { class: "form-control", maxlength: 11 } %>
          </div>

          <div class="mb-3">
            <%= f.input :email,
                        required: true,
                        label: "E-mail",
                        placeholder: "seu@email.com",
                        input_html: { autocomplete: "email", class: "form-control" } %>
          </div>

          <div class="row">
            <div class="col-md-6 mb-3">
              <%= f.input :password,
                          required: true,
                          label: "Senha",
                          placeholder: "Mínimo 6 caracteres",
                          hint: ("Mínimo #{@minimum_password_length} caracteres" if @minimum_password_length),
                          input_html: { autocomplete: "new-password", class: "form-control" } %>
            </div>
            <div class="col-md-6 mb-3">
              <%= f.input :password_confirmation,
                          required: true,
                          label: "Confirmar Senha",
                          placeholder: "Repita a senha",
                          input_html: { autocomplete: "new-password", class: "form-control" } %>
            </div>
          </div>

          <div class="d-grid">
            <%= f.button :submit, "Criar Conta", class: "btn btn-success btn-lg" %>
          </div>
        <% end %>
      </div>
      <div class="card-footer text-center">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
