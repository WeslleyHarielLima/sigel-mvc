<%= simple_form_for(@g_veiculo, html: { class: "needs-validation", id: "sigelFormWizard" }) do |f| %>
  <% if @g_veiculo.errors.any? %>
    <div class="sigel-alert sigel-alert-erro mb-4">
      <iconify-icon icon="solar:danger-triangle-bold-duotone" class="fs-4"></iconify-icon>
      <div>
        <strong><%= pluralize(@g_veiculo.errors.count, "erro", "erros") %> encontrado(s):</strong>
        <ul class="mb-0 mt-2">
          <% @g_veiculo.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>
  <!-- STEPPER -->
  <div class="sigel-card mb-4">
    <div class="sigel-card-body">
      <div class="sigel-stepper">
        <div class="sigel-step active" data-step="1">
          <div class="sigel-step-icon">
            <iconify-icon icon="solar:document-text-bold-duotone"></iconify-icon>
            <div class="sigel-step-number">1</div>
          </div>
          <div class="sigel-step-label">Etapa 1</div>
        </div>
        <div class="sigel-step-line"></div>
        <div class="sigel-step" data-step="2">
          <div class="sigel-step-icon">
            <iconify-icon icon="solar:document-text-bold-duotone"></iconify-icon>
            <div class="sigel-step-number">2</div>
          </div>
          <div class="sigel-step-label">Etapa 2</div>
        </div>
        <div class="sigel-step-line"></div>
        <div class="sigel-step" data-step="3">
          <div class="sigel-step-icon">
            <iconify-icon icon="solar:document-text-bold-duotone"></iconify-icon>
            <div class="sigel-step-number">3</div>
          </div>
          <div class="sigel-step-label">Etapa 3</div>
        </div>
      </div>
    </div>
  </div>
  <!-- ETAPA 1 -->
  <div class="sigel-form-step active" data-step="1">
    <div class="sigel-card">
      <div class="sigel-card-header">
        <h5><iconify-icon icon="solar:document-text-bold-duotone"></iconify-icon> Etapa 1</h5>
      </div>
      <div class="sigel-card-body">
        <div class="row">
          <div class="col-md-6 mb-4">
            <label class="sigel-form-label"><strong>Placa</strong></label>
            <%= f.input :placa, label: false, placeholder: "Ex: ABC1D23", input_html: { class: "form-control sigel-form-control" } %>
          </div>
          <div class="col-md-6 mb-4">
            <label class="sigel-form-label"><strong>Chassi</strong></label>
            <%= f.input :chassi, label: false, placeholder: "Digite o chassi do veículo", input_html: { class: "form-control sigel-form-control" } %>
          </div>
          <div class="col-md-6 mb-4">
            <label class="sigel-form-label"><strong>Renavam</strong></label>
            <%= f.input :renavam, label: false, placeholder: "Digite o RENAVAM", input_html: { class: "form-control sigel-form-control" } %>
          </div>
          <div class="col-md-6 mb-4">
            <label class="sigel-form-label"><strong>Tombamento</strong></label>
            <%= f.input :tombamento, label: false, placeholder: "Número de tombamento patrimonial", input_html: { class: "form-control sigel-form-control" } %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- ETAPA 2 -->
  <div class="sigel-form-step" data-step="2">
    <div class="sigel-card">
      <div class="sigel-card-header">
        <h5><iconify-icon icon="solar:document-text-bold-duotone"></iconify-icon> Etapa 2</h5>
      </div>
      <div class="sigel-card-body">
        <div class="row">
          <div class="col-md-6 mb-4">
            <label class="sigel-form-label"><strong>Marca</strong></label>
            <%= f.input :g_marca_veiculo_id, collection: GMarcaVeiculo.all, label_method: :descricao, value_method: :id, label: false, prompt: "Selecione a marca do veículo", input_html: { class: "form-control sigel-form-control" } %>          </div>
          <div class="col-md-6 mb-4">
            <label class="sigel-form-label"><strong>Modelo</strong></label>
            <%= f.input :modelo, label: false, placeholder: "Ex: Uno, Gol, Corolla", input_html: { class: "form-control sigel-form-control" } %>
          </div>
          <div class="col-md-6 mb-4">
            <label class="sigel-form-label"><strong>Ano</strong></label>
            <%= f.input :ano, label: false, placeholder: "Ex: 2020", input_html: { class: "form-control sigel-form-control" } %>
          </div>
          <div class="col-md-6 mb-4">
            <label class="sigel-form-label"><strong>Cor</strong></label>
            <%= f.input :cor, label: false, placeholder: "Ex: Branco, Preto", input_html: { class: "form-control sigel-form-control" } %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- ETAPA 3 -->
  <!-- ETAPA 3 -->
  <div class="sigel-form-step" data-step="3">
    <div class="sigel-card">
      <div class="sigel-card-header">
        <h5><iconify-icon icon="solar:document-text-bold-duotone"></iconify-icon> Etapa 3</h5>
      </div>
      <div class="sigel-card-body">
        <div class="row">
          <div class="col-md-6 mb-4">
            <label class="sigel-form-label"><strong>Motor</strong></label>
            <%= f.input :motor, label: false, placeholder: "Ex: 1.0 Flex", input_html: { class: "form-control sigel-form-control" } %>
          </div>
          <div class="col-md-6 mb-4">
            <label class="sigel-form-label"><strong>Tipo de Combustível</strong></label>
            <%= f.input :g_tipo_combustivel_id,
              collection: GTipoCombustivel.all,
              label_method: :descricao,
              value_method: :id,
              label: false,
              prompt: "Selecione o tipo de combustível",
              input_html: { class: "form-control sigel-form-control" } %>
          </div>
          <div class="col-md-6 mb-4">
            <label class="sigel-form-label"><strong>Número interno</strong></label>
            <%= f.input :numero_interno, label: false, placeholder: "Ex: INT-0001", input_html: { class: "form-control sigel-form-control" } %>
          </div>
          <div class="col-md-6 mb-4">
            <label class="sigel-form-label"><strong>Status do Veículo</strong></label>
            <%= f.input :g_status_veiculo_id, collection: GStatusVeiculo.all, label_method: :descricao, value_method: :id, label: false, prompt: "Selecione o status do veículo", input_html: { class: "form-control sigel-form-control" } %>
          </div>
          <!-- NOVO: Situação Administrativa -->
          <div class="col-md-6 mb-4">
            <label class="sigel-form-label"><strong>Situação Administrativa</strong></label>
            <%= f.input :situacao_administrativa, label: false, placeholder: "Ex: Regular, Apreendido, Judicializado", input_html: { class: "form-control sigel-form-control" } %>
          </div>
          <!-- NOVO: Localização Física -->
          <div class="col-md-6 mb-4">
            <label class="sigel-form-label"><strong>Localização Física</strong></label>
            <%= f.input :localizacao_fisica, label: false, placeholder: "Ex: Pátio Central, Garagem da Secretaria X", input_html: { class: "form-control sigel-form-control" } %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- BOTÕES -->
  <div class="sigel-card">
    <div class="sigel-card-body">
      <div class="d-flex gap-3 justify-content-between align-items-center">
        <%= link_to g_veiculos_path, class: "btn btn-sigel-outline d-flex align-items-center gap-2" do %>
          <iconify-icon icon="solar:close-circle-bold-duotone"></iconify-icon>
          Cancelar
        <% end %>
        <div class="d-flex gap-2">
          <button type="button" class="btn btn-sigel-outline d-flex align-items-center gap-2" id="prevBtn" style="display:none;">
            <iconify-icon icon="solar:arrow-left-bold"></iconify-icon> Anterior
          </button>
          <button type="button" class="btn btn-sigel-primary d-flex align-items-center gap-2" id="nextBtn">
            Próximo <iconify-icon icon="solar:arrow-right-bold"></iconify-icon>
          </button>
          <%= f.submit @g_veiculo.new_record? ? "Criar" : "Atualizar", class: "btn btn-sigel-primary d-flex align-items-center gap-2", id: "submitBtn", style: "display:none;" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
<script>
  (function() {
    let currentStep = 1;
    const totalSteps = document.querySelectorAll('.sigel-form-step').length;

    const nextBtn = document.getElementById('nextBtn');
    const prevBtn = document.getElementById('prevBtn');
    const submitBtn = document.getElementById('submitBtn');

    function showStep(step) {
      // Hide all steps
      document.querySelectorAll('.sigel-form-step').forEach(el => {
        el.style.display = 'none';
        el.classList.remove('active');
      });

      // Show current step
      const currentStepEl = document.querySelector(`.sigel-form-step[data-step="${step}"]`);
      if (currentStepEl) {
        currentStepEl.style.display = 'block';
        currentStepEl.classList.add('active');
      }

      // Update stepper header
      document.querySelectorAll('.sigel-step').forEach(el => {
        const stepNum = parseInt(el.dataset.step);
        el.classList.remove('active', 'completed');

        if (stepNum < step) el.classList.add('completed');
        if (stepNum === step) el.classList.add('active');
      });

      // Controls visibility
      prevBtn.style.display = step === 1 ? 'none' : 'flex';

      // Next vs Submit button logic
      if (totalSteps <= 1) {
          nextBtn.classList.add('d-none');
          submitBtn.classList.remove('d-none');
          submitBtn.style.display = 'flex';
      } else if (step === totalSteps) {
        nextBtn.classList.add('d-none');
        submitBtn.classList.remove('d-none');
        submitBtn.style.display = 'flex';
      } else {
        nextBtn.classList.remove('d-none');
        submitBtn.classList.add('d-none');
        submitBtn.style.display = 'none';
      }

      window.scrollTo({ top: 0, behavior: 'smooth' });
    }

    // Initialize logic if steps exist
    if (totalSteps > 0) {
        nextBtn.onclick = () => {
          if (currentStep < totalSteps) {
            currentStep++;
            showStep(currentStep);
          }
        };

        prevBtn.onclick = () => {
          if (currentStep > 1) {
            currentStep--;
            showStep(currentStep);
          }
        };

        showStep(1);
    } else {
        // Fallback if no steps generated (e.g. no fields)
        if(submitBtn) submitBtn.style.display = 'flex';
        if(nextBtn) nextBtn.style.display = 'none';
    }
  })();
</script>