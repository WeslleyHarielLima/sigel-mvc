<!-- Page Header -->
<div class="sigel-page-header mb-4">
  <div class="sigel-page-title">
    <iconify-icon icon="solar:layers-bold-duotone" style="font-size: 2.5rem;"></iconify-icon>
    <h1 style="font-size: 2.5rem; font-weight: 700; margin: 0;"><%= t("activerecord.models.g_estado.other", default: "G estados") %></h1>
  </div>
  <%= link_to new_g_estado_path, class: "btn btn-sigel-primary d-flex align-items-center gap-2" do %>
    <iconify-icon icon="solar:add-circle-bold-duotone"></iconify-icon>
    <span>Novo Registro</span>
  <% end %>
</div>
<!-- Filtros - Colapsável -->
<div class="mb-4">
  <button class="btn w-100 sigel-card" type="button" data-bs-toggle="collapse" data-bs-target="#filtrosForm" style="border: none; padding: 1rem 1.5rem; background: linear-gradient(135deg, var(--sigel-verde-claro) 0%, #f0f8f4 100%); text-align: left; display: flex; align-items: center; justify-content: space-between; font-weight: 600; color: var(--sigel-verde-escuro);">
    <span style="display: flex; align-items: center; gap: 0.75rem; font-size: 1.1rem;">
      <iconify-icon icon="solar:filter-bold-duotone"></iconify-icon>
      Filtros de Pesquisa
    </span>
    <iconify-icon icon="solar:chevron-down-bold" class="collapse-icon" style="transition: transform 0.3s ease;"></iconify-icon>
  </button>
  <div class="collapse" id="filtrosForm" style="margin-top: 0.5rem;">
    <div class="sigel-card" style="border-top: none; border-top-left-radius: 0; border-top-right-radius: 0;">
      <div class="sigel-card-body">
        <%= search_form_for @q, url: g_estados_path, method: :get do |f| %>
          <div class="row g-3">
            <div class="col-lg-3 col-md-6">
              <label class="sigel-form-label">
                <strong>Descricao</strong>
              </label>
              <%= f.search_field :descricao_cont, class: "form-control sigel-form-control", placeholder: "Pesquisar..." %>
            </div>
            <div class="col-lg-3 col-md-6">
              <label class="sigel-form-label">
                <strong>Uf</strong>
              </label>
              <%= f.search_field :uf_cont, class: "form-control sigel-form-control", placeholder: "Pesquisar..." %>
            </div>
            <div class="col-lg-3 col-md-6">
              <label class="sigel-form-label">
                <strong>País</strong>
              </label>
              <%= f.search_field :g_pais_descricao_cont, class: "form-control sigel-form-control", placeholder: "Pesquisar..." %>
            </div>
            <div class="col-12 d-flex gap-2">
              <%= f.submit "Aplicar Filtros", class: "btn btn-sigel-primary d-flex align-items-center gap-2" %>
              <%= link_to g_estados_path, class: "btn btn-sigel-outline d-flex align-items-center gap-2" do %>
                <iconify-icon icon="solar:restart-bold-duotone"></iconify-icon>
                Limpar
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<!-- Tabela de Registros -->
<div class="sigel-card">
  <div class="sigel-card-header">
    <h5>
      <iconify-icon icon="solar:clipboard-list-bold-duotone" class="me-2"></iconify-icon>
      Lista de Registros
    </h5>
    <span class="badge" style="background: var(--sigel-dourado); color: var(--sigel-verde-escuro); font-size: 0.9rem; padding: 0.5rem 1rem;">
      <%= @g_estados.total_count rescue @g_estados.count %> registros
    </span>
  </div>
  <div class="sigel-card-body p-0">
    <% if @g_estados.any? %>
      <div class="table-responsive">
        <table class="table sigel-table mb-0 align-middle">
          <thead>
            <tr>
              <th style="min-width: 220px;">
                <%= sort_link(@q, :descricao, "Descrição") %>
              </th>
              <th class="text-center" style="width: 80px;">
                <%= sort_link(@q, :uf, "UF") %>
              </th>
              <th style="min-width: 180px;">
                <%= sort_link(@q, :g_pais, "País") %>
              </th>
              <th class="text-end" style="width: 140px;">Ações</th>
            </tr>
          </thead>
          <tbody>
            <% @g_estados.each do |g_estado| %>
              <tr class="sigel-table-row">
                <td class="fw-semibold">
                  <%= g_estado.descricao %>
                </td>
                <td class="text-center">
                  <span class="sigel-badge-uf"><%= g_estado.uf %></span>
                </td>
                <td class="text-muted">
                  <%= g_estado.g_pais&.descricao %>
                </td>
                <td class="text-end">
                  <div class="d-inline-flex gap-2 sigel-actions">
                    <%= link_to g_estado_path(g_estado), class: "sigel-action-btn", title: "Visualizar" do %>
                      <iconify-icon icon="solar:eye-bold"></iconify-icon>
                    <% end %>
                    <%= link_to edit_g_estado_path(g_estado), class: "sigel-action-btn", title: "Editar" do %>
                      <iconify-icon icon="solar:pen-bold"></iconify-icon>
                    <% end %>
                    <%= button_to g_estado_path(g_estado),
          method: :delete,
          class: "sigel-action-btn sigel-action-btn-danger",
          data: { turbo_confirm: "Excluir este estado?" },
          form: { data: { turbo: false } } do %>
                      <iconify-icon icon="solar:trash-bin-trash-bold"></iconify-icon>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <!-- Paginação -->
      <div class="sigel-card-footer">
        <div class="d-flex justify-content-between align-items-center">
          <div class="text-muted">
            Exibindo <strong><%= @g_estados.size %></strong> de
            <strong><%= @g_estados.total_count rescue @g_estados.count %></strong> registros
          </div>
          <div>
            <% if defined?(@pagy) && @pagy.pages > 1 %>
              <%== pagy_bootstrap_nav(@pagy) %>
            <% end %>
          </div>
        </div>
      </div>
    <% else %>
      <div class="p-5 text-center">
        <iconify-icon icon="solar:folder-open-bold-duotone" style="font-size: 5rem; color: var(--sigel-cinza-400);"></iconify-icon>
        <h5 class="mt-3" style="color: var(--sigel-cinza-600);">Nenhum registro encontrado</h5>
        <p class="text-muted">Cadastre um novo registro para começar</p>
        <%= link_to new_g_estado_path, class: "btn btn-sigel-primary mt-3" do %>
          <iconify-icon icon="solar:add-circle-bold-duotone" class="me-2"></iconify-icon>
          Novo Registro
        <% end %>
      </div>
    <% end %>
  </div>
</div>
