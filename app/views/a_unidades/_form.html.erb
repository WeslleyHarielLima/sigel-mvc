<%= simple_form_for(@a_unidade, html: { class: "needs-validation", id: "sigelFormWizard" }) do |f| %>
  <% if @a_unidade.errors.any? %>
    <div class="sigel-alert sigel-alert-erro mb-4">
      <iconify-icon icon="solar:danger-triangle-bold-duotone" class="fs-4"></iconify-icon>
      <div>
        <strong><%= pluralize(@a_unidade.errors.count, "erro", "erros") %> encontrado(s):</strong>
        <ul class="mb-0 mt-2">
          <% @a_unidade.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>
  <!-- Stepper -->
  <div class="sigel-card mb-4">
    <div class="sigel-card-body">
      <div class="sigel-stepper">
        <div class="sigel-step active" data-step="1">
          <div class="sigel-step-icon">
            <iconify-icon icon="solar:document-text-bold-duotone"></iconify-icon>
            <div class="sigel-step-number">1</div>
          </div>
          <div class="sigel-step-label">Etapa 1</div>
        </div>
        <div class="sigel-step-line"></div>
        <div class="sigel-step" data-step="2">
          <div class="sigel-step-icon">
            <iconify-icon icon="solar:document-text-bold-duotone"></iconify-icon>
            <div class="sigel-step-number">2</div>
          </div>
          <div class="sigel-step-label">Etapa 2</div>
        </div>
      </div>
    </div>
  </div>
  <!-- Etapa 1 -->
  <div class="sigel-form-step active" data-step="1">
    <div class="sigel-card">
      <div class="sigel-card-header">
        <h5>
          <iconify-icon icon="solar:document-text-bold-duotone"></iconify-icon>
          Etapa 1: Dados do Registro
        </h5>
      </div>
      <div class="sigel-card-body">
        <div class="row">
          <div class="col-md-6 mb-4">
            <label class="sigel-form-label"><strong>Nome fantasia</strong></label>
            <%= f.input :nome_fantasia, label: false, input_html: { class: "form-control sigel-form-control" }, placeholder: "Nome fantasia" %>
          </div>
          <div class="col-md-6 mb-4">
            <label class="sigel-form-label"><strong>Órgão</strong></label>
            <%= f.input :a_orgao_id, collection: AOrgao.all.map { |o| [o.descricao, o.id] }, prompt: "Selecione o órgão", label: false, input_html: { class: "form-control sigel-form-control" }, placeholder: "Órgão" %>
          </div>
          <div class="col-md-6 mb-4">
            <label class="sigel-form-label"><strong>CNPJ</strong></label>
            <%= f.input :cnpj, label: false, input_html: { class: "form-control sigel-form-control" }, placeholder: "CNPJ" %>
          </div>
          <div class="col-md-6 mb-4">
            <label class="sigel-form-label"><strong>Endereço</strong></label>
            <%= f.input :endereco, label: false, input_html: { class: "form-control sigel-form-control" }, placeholder: "Endereço" %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- Etapa 2 -->
  <div class="sigel-form-step" data-step="2">
    <div class="sigel-card">
      <div class="sigel-card-header">
        <h5>
          <iconify-icon icon="solar:document-text-bold-duotone"></iconify-icon>
          Etapa 2: Dados do Registro
        </h5>
      </div>
      <div class="sigel-card-body">
        <div class="row">
          <div class="col-md-6 mb-4">
            <label class="sigel-form-label"><strong>Telefone</strong></label>
            <%= f.input :telefone, label: false, input_html: { class: "form-control sigel-form-control" }, placeholder: "Telefone" %>
          </div>
          <div class="col-md-6 mb-4">
            <label class="sigel-form-label"><strong>Status</strong></label>
            <%= f.input :a_status_id, collection: AStatus.all.map { |s| [s.descricao, s.id] }, prompt: "Selecione o status", label: false, input_html: { class: "form-control sigel-form-control" }, placeholder: "Status" %>
          </div>
          <div class="col-md-6 mb-4">
            <label class="sigel-form-label"><strong>Código interno</strong></label>
            <%= f.input :codigo_interno, label: false, input_html: { class: "form-control sigel-form-control" }, placeholder: "Código interno" %>
          </div>
          <div class="col-md-6 mb-4">
            <label class="sigel-form-label"><strong>Município</strong></label>
            <%= f.input :g_municipio_id, collection: GMunicipio.all.map { |m| [m.descricao, m.id] }, prompt: "Selecione o município", label: false, input_html: { class: "form-control sigel-form-control" }, placeholder: "Município" %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- Ações -->
  <div class="sigel-card">
    <div class="sigel-card-body">
      <div class="d-flex gap-3 justify-content-between align-items-center">
        <%= link_to a_unidades_path, class: "btn btn-sigel-outline d-flex align-items-center gap-2" do %>
          <iconify-icon icon="solar:close-circle-bold-duotone"></iconify-icon>
          <span>Cancelar</span>
        <% end %>
        <div class="d-flex gap-2">
          <button type="button" class="btn btn-sigel-outline d-flex align-items-center gap-2 d-none" id="prevBtn">
            <iconify-icon icon="solar:arrow-left-bold"></iconify-icon>
            <span>Anterior</span>
          </button>
          <button type="button" class="btn btn-sigel-primary d-flex align-items-center gap-2" id="nextBtn">
            <span>Próximo</span>
            <iconify-icon icon="solar:arrow-right-bold"></iconify-icon>
          </button>
          <%= f.submit @a_unidade.new_record? ? "Criar" : "Atualizar",
            class: "btn btn-sigel-primary d-flex align-items-center gap-2 d-none",
            id: "submitBtn" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
<script>
  (function() {
    let currentStep = 1;
    const steps = document.querySelectorAll('.sigel-form-step');
    const totalSteps = steps.length;

    const nextBtn = document.getElementById('nextBtn');
    const prevBtn = document.getElementById('prevBtn');
    const submitBtn = document.getElementById('submitBtn');

    function showStep(step) {
      steps.forEach(el => {
        el.classList.remove('active');
        el.style.display = 'none';
      });

      const current = document.querySelector(`.sigel-form-step[data-step="${step}"]`);
      if (current) {
        current.classList.add('active');
        current.style.display = 'block';
      }

      document.querySelectorAll('.sigel-step').forEach(el => {
        const stepNum = parseInt(el.dataset.step);
        el.classList.toggle('completed', stepNum < step);
        el.classList.toggle('active', stepNum === step);
      });

      prevBtn.classList.toggle('d-none', step === 1);

      if (step === totalSteps) {
        nextBtn.classList.add('d-none');
        submitBtn.classList.remove('d-none');
      } else {
        nextBtn.classList.remove('d-none');
        submitBtn.classList.add('d-none');
      }

      window.scrollTo({ top: 0, behavior: 'smooth' });
    }

    if (totalSteps > 0) {
      nextBtn.onclick = () => currentStep < totalSteps && showStep(++currentStep);
      prevBtn.onclick = () => currentStep > 1 && showStep(--currentStep);
      showStep(1);
    }
  })();
</script>
