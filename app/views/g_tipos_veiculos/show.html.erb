<div class="d-flex justify-content-between align-items-center mb-4">
  <h1><i class="bi bi-tag"></i> Tipo de Veículo</h1>
  <div>
    <%= link_to edit_g_tipo_veiculo_path(@g_tipo_veiculo), class: "btn btn-warning" do %>
      <i class="bi bi-pencil"></i> Editar
    <% end %>
    <%= link_to g_tipos_veiculos_path, class: "btn btn-secondary" do %>
      <i class="bi bi-arrow-left"></i> Voltar
    <% end %>
  </div>
</div>

<div class="card">
  <div class="card-header">
    <h5 class="mb-0">Detalhes</h5>
  </div>
  <div class="card-body">
    <dl class="row">
      <dt class="col-sm-3">ID</dt>
      <dd class="col-sm-9"><%= @g_tipo_veiculo.id %></dd>

      <dt class="col-sm-3">Descrição</dt>
      <dd class="col-sm-9"><%= @g_tipo_veiculo.descricao %></dd>

      <dt class="col-sm-3">Veículos Associados</dt>
      <dd class="col-sm-9"><%= @g_tipo_veiculo.g_veiculos.count %></dd>

      <dt class="col-sm-3">Criado em</dt>
      <dd class="col-sm-9"><%= l(@g_tipo_veiculo.created_at, format: :long) rescue @g_tipo_veiculo.created_at %></dd>

      <dt class="col-sm-3">Atualizado em</dt>
      <dd class="col-sm-9"><%= l(@g_tipo_veiculo.updated_at, format: :long) rescue @g_tipo_veiculo.updated_at %></dd>
    </dl>
  </div>
</div>
